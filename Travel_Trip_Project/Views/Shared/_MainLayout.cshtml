
@{
    Layout = null;
}

<!DOCTYPE HTML>
<html>
<head>
    <title>My Travel Blog</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link rel="stylesheet" href="~/Templates/Travel/css/style.css" type="text/css" media="all" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <link href="~/Templates/Travel/css/slider.css" rel="stylesheet" type="text/css" media="all" />
    <script src="~/Templates/Travel/js/jquery.min.js"></script>
    <script src="~/Templates/Travel/js/responsiveslides.min.js"></script>

    @*Furkan Kahraman Custom CSS*@
    <link href="~/Content/custom.css" rel="stylesheet" type="text/css" />

    <script>
        // You can also use "$(window).load(function() {"
        $(function () {
            // Slideshow 1
            $("#slider1").responsiveSlides({
                auto: true,
                nav: true,
                speed: 500,
                namespace: "callbacks",
            });
        });
    </script>
</head>
<body>
    <div class="header">
        <div class="wrap">
            <div class="logo">
                <a href="/Default/Index">
                    <img src="~/Templates/Travel/images/logo.png" alt="" />
                </a>
                <h1 class="header-title">TATİL & SEYAHAT BLOĞUM</h1>
            </div>
            <div class="clear"></div>
        </div>
    </div>

    <div class="header-bottom">
        <div class="wrap">
            <ul id="nav">
                <li><a href="/Default/Index">Anasayfa</a></li>
                <li><a class="hsubs" href="/Blog/Index">Bloğum</a></li>
                <li>
                    <a class="hsubs" href="#">Rehber</a>
                    <ul class="subs">
                        <li><a href="/Default/Hotels">Oteller</a></li>
                        <li><a href="/Default/Restaurants">Restoranlar</a></li>
                    </ul>
                </li>
                <li><a class="hsubs" href="/About/Index">Hakkımda</a></li>
                <li><a href="/Contact/Index/">İletişim</a></li>
            </ul>
        </div>
    </div>

    <div class="content">
        @RenderBody()
    </div>
</body>
</html>

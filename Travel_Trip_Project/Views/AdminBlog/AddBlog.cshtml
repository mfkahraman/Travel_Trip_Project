@model Travel_Trip_Project.Models.Siniflar.Blog

@{
    ViewBag.Title = "Blog Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yeni Blog Ekle</h2>

@using (Html.BeginForm("AddBlog", "AdminBlog", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        <label>Blog Başlığı</label>
        @Html.TextBoxFor(model => model.Title, new { @class = "form-control", placeholder = "Blog başlığını buraya girin" })
        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label>Tarih</label>
        @Html.TextBoxFor(model => model.Date, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
        @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label>Açıklama</label>
        @Html.TextAreaFor(model => model.Description, new { @class = "form-control", rows = 5, placeholder = "Blog içeriğini buraya girin" })
        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label>Görsel Yükleyin</label>
        <input type="file" name="file" class="form-control" accept=".jpg,.jpeg,.png,.gif" />
        <small class="form-text text-muted">Sadece .jpg, .jpeg, .png, .gif dosyaları yükleyebilirsiniz.</small>
    </div>

    <br />
    <button type="submit" class="btn btn-primary">Kaydet</button>
}

@model Travel_Trip_Project.Models.Siniflar.BlogYorum
@{
    ViewBag.Title = "Blog Detail";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<!DOCTYPE HTML>
<html>
<head>
    <link href="~/Templates/blog/css/bootstrap.css" rel='stylesheet' type='text/css' />
    <link href="~/Templates/blog/css/style.css" rel='stylesheet' type='text/css' />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <style>
        body {
            font-family: Arial, Helvetica, sans-serif;
        }

        .blog-detail-container {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            margin-top: 20px;
        }

        .blog-image {
            flex: 1 1 40%;
            max-width: 40%;
            border-radius: 10px;
            overflow: hidden;
        }

            .blog-image img {
                width: 100%;
                height: auto;
                border-radius: 10px;
            }

        .blog-content {
            flex: 1 1 58%;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            padding: 15px;
            background-color: #f9f9f9;
            border: 1px solid #ddd;
            border-radius: 10px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
        }

            .blog-content h1 {
                font-size: 24px;
                font-weight: bold;
                color: #333;
                margin-bottom: 15px;
            }

            .blog-content p {
                font-size: 16px;
                color: #666;
                line-height: 1.6;
            }

        .comments-section {
            margin-top: 10px;
        }

            .comments-section h2 {
                font-size: 30px;
                font-weight: bold;
                margin-bottom: 10px;
            }

        .comment {
            margin-bottom: 15px;
            padding: 10px;
            background-color: #f1f1f1;
            border-radius: 5px;
            border: 1px solid #ddd;
        }

            .comment h3 {
                font-size: 14px;
                font-weight: bold;
                margin: 0;
                color: #333;
            }

            .comment p {
                font-size: 14px;
                color: #555;
                margin: 5px 0 0;
            }
    </style>
</head>
<body>
    <div class="container">
        <!-- Blog Detay -->
        <div class="blog-detail-container">
            @* Blog detayını gösteren kısım *@
            @if (Model.Blogs != null && Model.Blogs.Any())
            {
                var blog = Model.Blogs.FirstOrDefault(); // İlk blogu al
                if (blog != null)
                {
                    <div class="blog-image">
                        <img src="@blog.BlogImage" alt="Blog Görseli" />
                    </div>
                    <div class="blog-content">
                        <h1>@blog.Title</h1>
                        <p>@blog.Description</p>
                    </div>
                }
            }
        </div>

        <!-- Yorumlar -->
        <div class="comments-section">
            <h2>Yorumlar</h2>
            @if (Model.Comments != null && Model.Comments.Any())
            {
                foreach (var comment in Model.Comments)
                {
                    <div class="comment">
                        <h3>@comment.UserName (@comment.BlogId)</h3>
                        <p>@comment.Context</p>
                    </div>
                }
            }
            else
            {
                <p>Henüz yorum yok. Yorum yapan ilk kişi olun!</p>
            }
        </div>
    </div>
</body>
</html>

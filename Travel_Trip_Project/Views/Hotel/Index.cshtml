@using PagedList
@using PagedList.Mvc

@model PagedList.IPagedList<Travel_Trip_Project.Models.Siniflar.Hotel>

@{
    ViewBag.Title = "Hotel Listesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 style="margin-top:20px">Hotel Listesi</h2>
<br />

<!-- Sayfalama için stil ekleniyor -->
<style>
    /* Sayfa numarası için stil */
    .pagination {
        display: flex;
        justify-content: center;
        padding: 10px 0;
        list-style: none;
    }

        .pagination li {
            margin: 0 5px;
        }

            .pagination li a {
                display: block;
                padding: 8px 15px;
                text-decoration: none;
                background-color: #f8f9fa;
                border: 1px solid #ddd;
                color: #007bff;
                border-radius: 5px;
            }

                .pagination li a:hover {
                    background-color: #007bff;
                    color: white;
                }

        .pagination .active a {
            background-color: #007bff;
            color: white;
            border: 1px solid #007bff;
        }

        .pagination .disabled a {
            background-color: #e9ecef;
            color: #6c757d;
            pointer-events: none;
        }
</style>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th style="width: 20%;">HOTEL ADI</th>
            <th style="width: 50%;">AÇIKLAMA</th>
            <th style="width: 10%;">GÖRSEL</th>
            <th style="width: 20%;">İŞLEMLER</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description.Substring(0, Math.Min(150, item.Description.Length))...</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" alt="@item.Name" style="width: 50px; height: 50px; object-fit: cover;" />
                    }
                    else
                    {
                        <span>Görsel Yok</span>
                    }
                </td>
                <td>
                    <a href="/Hotel/UpdateHotel/@item.ID" class="btn btn-warning btn-sm">Güncelle</a>
                    <a href="/Hotel/DeleteHotel/@item.ID" class="btn btn-danger btn-sm" onclick="return confirm('Emin misiniz?')">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))

<a href="/Hotel/AddHotel/" class="btn btn-primary">Yeni Hotel Ekle</a>

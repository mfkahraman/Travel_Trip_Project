@model Travel_Trip_Project.Models.Siniflar.Hotel

@{
    ViewBag.Title = "Hotel Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yeni Hotel Ekle</h2>

@using (Html.BeginForm("AddHotel", "AdminHotel", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        <label>Hotel Adı</label>
        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "Hotel adını buraya girin" })
        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label>Açıklama</label>
        @Html.TextAreaFor(model => model.Description, new { @class = "form-control", rows = 5, placeholder = "Açıklama içeriğini buraya girin" })
        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label>Görsel Yükleyin</label>
        <input type="file" name="file" class="form-control" accept=".jpg,.jpeg,.png,.gif" />
        <small class="form-text text-muted">Sadece .jpg, .jpeg, .png, .gif dosyaları yükleyebilirsiniz.</small>
    </div>

    <br />
    <button type="submit" class="btn btn-primary">Kaydet</button>
}

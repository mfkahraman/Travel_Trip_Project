@model List<Travel_Trip_Project.Models.Siniflar.Blog>

<div class="padding1">
    <h4>En Beğendiğim Yerler</h4>
    <div class="blog-list">
        @for (int i = 0; i < Model.Count; i += 2)
        {
            <div class="blog-item">
                <div class="box-left">
                    <div class="bot-img">
                        <img src="@Model[i].BlogImage" alt="@Model[i].Title" />
                    </div>
                    <div class="bot-desc">
                        <a href="/Blog/BlogDetail/@Model[i].ID">@Model[i].Title</a>
                    </div>
                </div>

                @if (i + 1 < Model.Count)
                {
                    <div class="box1-left">
                        <div class="bot-img">
                            <img src="@Model[i + 1].BlogImage" alt="@Model[i + 1].Title" />
                        </div>
                        <div class="bot-desc1">
                            <a href="/Blog/BlogDetail/@Model[i + 1].ID">@Model[i + 1].Title</a>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

@model List<Travel_Trip_Project.Models.Siniflar.Hotel>

<div class="padding1">
    <h4>En Beğendiğim Oteller</h4>
    <div class="blog-list">
        @for (int i = 0; i < Model.Count; i += 2)
        {
            <div class="blog-item">
                <div class="box-left">
                    <div class="bot-img">
                        <img src="@Model[i].ImageUrl" alt="@Model[i].Name" />
                    </div>
                    <div class="bot-desc">
                        <a href="#">@Model[i].Name</a>
                    </div>
                </div>

                @if (i + 1 < Model.Count)
                {
                    <div class="box1-left">
                        <div class="bot-img">
                            <img src="@Model[i + 1].ImageUrl" alt="@Model[i + 1].Name" />
                        </div>
                        <div class="bot-desc1">
                            <a href="#">@Model[i + 1].Name</a>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>
